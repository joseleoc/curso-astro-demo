---
// Javascript
import { type APISpaceXResponse } from "../types/api";
import { getLatestLaunches } from "../services/spacex.ts";
import CardLaunch from "./CardLaunch.astro";

const launches = await getLatestLaunches();
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(({ id, links, success, flight_number, details }) => (
      <CardLaunch
        id={id}
        img={links.patch.small}
        success={success}
        flightNumber={flight_number}
        details={details}
      />
    ))
  }
</div>
